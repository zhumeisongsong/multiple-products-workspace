{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/open-ai-adapter": [
        "libs/shared/interface-adapters/open-ai-adapter/src/index.ts"
      ],
      "@shared/ui": ["libs/shared/ui/src/index.ts"],
      "@tasks/domain": ["libs/modules/tasks/domain/src/index.ts"],
      "@user-tasks/application": [
        "libs/modules/user-tasks/application/src/index.ts"
      ],
      "@user-tasks/domain": ["libs/modules/user-tasks/domain/src/index.ts"],
      "@users/application": ["libs/modules/users/application/src/index.ts"],
      "@users/domain": ["libs/modules/users/domain/src/index.ts"],
      "graphql-code-generator": ["libs/graphql-code-generator/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
